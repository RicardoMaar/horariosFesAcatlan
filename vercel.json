{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "functions": {
    "api/*.js": {
      "includedFiles": "data/**"
    }
  },
  "routes": [
    { "src": "/api/horarios/([^/]+)", "dest": "/api/horarios.js?codigo=$1" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
